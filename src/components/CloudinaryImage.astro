---
import { Image, RemoteImageProps } from 'astro:assets'
import { cloud } from '~/utils/cloudinary'

type Props = RemoteImageProps

const { props } = Astro
props.src = cloud.image(props.src).createCloudinaryURL()
---

<figure>
  <Image {...props} inferSize />
</figure>

<style>
  figure {
    display: flex;
    justify-content: center;
  }

  img {
    max-width: 100%;
    height: auto;
  }
</style>
