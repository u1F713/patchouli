---
import { Image } from 'astro:assets'
import { cloud } from '~/utils/cloudinary'

interface Props {
  src: string
  alt: string
}

const src = cloud.image(Astro.props.src).createCloudinaryURL()
---

<figure>
  <Image {src} alt={Astro.props.alt} loading="lazy" inferSize />
</figure>

<style>
  figure {
    display: flex;
    justify-content: center;
  }

  img {
    max-width: 100%;
    height: auto;
  }
</style>
