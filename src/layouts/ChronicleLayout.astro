---
import type { MarkdownHeading } from 'astro'
import MarkdownContent from '~/components/MarkdownContent.astro'
import BaseLayout from './BaseLayout.astro'
import TableOfContent from '~/components/TableOfContent/TableOfContent'

export interface Props {
  title: string
  description: string
  headings: MarkdownHeading[]
}

const { title, description, headings } = Astro.props
const contentDOMId = 'Markdown-Content'
---

<BaseLayout {title} {description}>
  <span
    style="position: fixed; bottom: 0; 100vw; background: var(--background-color);"
  >
    <TableOfContent client:idle {contentDOMId} {headings} />
  </span>
  <div class="chronicles-container">
    <MarkdownContent>
      <h1>{title}</h1>
      <p>{description}</p>
      <div role="separator"></div>

      <span id={contentDOMId}><slot /></span>
    </MarkdownContent>
  </div>
</BaseLayout>

<style>
  .chronicles-container {
    max-width: 40em;
    margin: auto;
  }

  div[role='separator'] {
    height: auto;
    margin: 2em 0;
    border: 2px oklch(45% 0.01 268.31 / 75.33%) inset;
    border-style: solid none none none;
  }
</style>
